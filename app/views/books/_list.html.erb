 <div class="col-md-3">
   <h2>User info</h2>

  <table class="table">

  <%= image_tag current_user.get_profile_image(100,100) %>



  <tbody>
  <tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= current_user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
</tbody></table>

<div class="row">
  <a href = "/users/<%= current_user.id %>/edit"><i class="fas fa-user-cog"></i>
</a></div>

   <h1>New book</h1>
   <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

    </div>