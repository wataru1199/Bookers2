<div class="container px-5 px-sm-0">

<div class="row"> 
 
 
 <div class="col-md-3">
   <h2>User info</h2>

  <table class="table">

 
<%= image_tag @book.user.get_profile_image(100,100) %>

  <tbody>
  <tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= current_user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
</tbody></table>
　
<div class="row">
  <a href = "/users/<%= current_user.id %>/edit"><i class="fas fa-user-cog"></i>
</a></div>

   <h1>New book</h1>
   <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table table-hover table-inverse">

  <tbody>
    <tr>
       <td><a href= "/users/<%= @book.user_id %>" ><%= image_tag @book.user.get_profile_image(100,100) %></a>
       <br><a href= "/users/<%= @book.user_id %>" ><%= @book.user.name %></a></br></td>
       <td><a href="/books/<%= @book.id %>"><%= @book.title %></a></td>
       <td><span><%= @book.body %></span></td>
      <% if @book.user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
       <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
    </tr>

  </tbody>
  </table>
  </div>



    </div>
  </div>
